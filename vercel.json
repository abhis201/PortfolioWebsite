{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/index.js" },
      { "source": "/(.*)", "destination": "/public/$1" }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/api/(.*)", "dest": "/index.js" },
      { "src": "/(.*)", "dest": "/public/index.html" }
    ]
  }