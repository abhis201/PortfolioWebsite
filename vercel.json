{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "client/dist" }
      },
      {
        "src": "server/index.ts",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "source": "/api/(.*)",
        "destination": "/server/index.ts"
      },
      {
        "source": "/(.*)",
        "destination": "/client/dist/$1"
      }
    ]
  }
  